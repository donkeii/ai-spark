<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Reader card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_tarot_card"
                android:padding="12dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:clipToOutline="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground"/>

                <TextView
                    android:id="@+id/readerStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="● online"
                    android:textColor="@color/cyan"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/readerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="donkeii_uwu"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/readerBio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Liora thrives in moments of uncertainty , using Tarot to help you navigate through life's storms. Whether you're facing a crisis or an important decision, Liora's readings offer strength, guidance, and clarity ."
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="12dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom CTA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:padding="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnStartChat"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_login_button"
            android:textColor="@color/dark_blue"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Start Chat with  …"/>
    </LinearLayout>

</LinearLayout>


